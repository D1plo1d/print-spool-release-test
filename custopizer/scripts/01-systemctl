set -x
set -e

export LC_ALL=C

source /common.sh
install_cleanup_trap

cd /home/pi

# See: https://unix.stackexchange.com/questions/369017/enable-systemd-services-without-systemctl
sudo apt-get install -y tmux systemd-container
tmux new-session -d -s mysession "systemd-nspawn --boot --machine=machine_name -D /install/directory"
