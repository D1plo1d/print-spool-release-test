set -x
set -e

export LC_ALL=C

source /common.sh
install_cleanup_trap

cd /home/pi

export CI=true
export LOCAL_ARTIFACT=1
export EXPERIMENTAL_BELT_ENGINE=1

yes | /files/install

# Tell PrintSpool to enable the Wifi Connect portal on startup
sudo touch /usr/local/etc/printspool/common/.enable-wifi-ap

# Install Wifi Connect
bash <(curl -L https://github.com/balena-io/wifi-connect/raw/master/scripts/raspbian-install.sh)

# Disable power management of wlan0 to fix network manager
# https://github.com/balena-os/wifi-connect/issues/366#issuecomment-744141171
sudo iwconfig wlan0 power off
